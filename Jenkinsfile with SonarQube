pipeline {
        agent any
        stages {
            stage('Checkout') {
                steps {
                    git url: 'https://github.com/phatchamcom/library-management.git'
                }
            }
            stage('Build') {
                steps {
                    bat 'echo "Building..."'
                    // Thêm lệnh build thực tế nếu có (ví dụ: mvn clean install)
                }
            }
            stage('SonarQube Analysis') {
                steps {
                    withSonarQubeEnv('SonarQube') { // Tên server đã cấu hình
                        bat 'mvn sonar:sonar' // Thay bằng lệnh phù hợp (Maven/Gradle)
                    }
                }
            }
            stage('Test') {
                steps {
                    bat 'C:\\php\\php.exe -l login.php'
                }
            }
            stage('Deploy') {
                steps {
                    bat '''
                        if not exist C:\\path\\to\\destination\\library mkdir C:\\path\\to\\destination\\library
                        xcopy . C:\\path\\to\\destination\\library /E /H /C /I /Y
                    '''
                }
            }
        }
        post {
            failure {
                echo 'Pipeline failed!'
            }
        }
    }
